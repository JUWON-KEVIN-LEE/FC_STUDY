public class Test {
	public static void main(String[] args) {
		String str = "1,000";
		str.replace(",", "1");
		System.out.println(str);
		System.out.println(str);
		System.out.println(str);
		System.out.println("----------");
		String[] array = str.split(".");
		for(String item : array)
			System.out.print(item+" ");
	}
}